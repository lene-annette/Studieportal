<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activities.Vocabulary" android:orientation="vertical">

    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="200dp" android:id="@+id/vocab_danish"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textIsSelectable="false"
            android:textStyle="normal" android:gravity="center"/>
    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="200dp" android:id="@+id/vocab_english"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:gravity="center"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/vocab_knowCount" android:layout_weight="1"
                android:text="0"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/vocab_dontKCount" android:layout_weight="1"
                android:text="0"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:gravity="bottom">
        <Button
                android:text="Kender"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/vocab_know" android:layout_weight="1"/>
        <Button
                android:text="Kender ikke"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/vocab_dontknow" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>