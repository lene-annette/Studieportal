<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activities.India">

    <TextView
            android:text="activity_listening_instruction"
            android:layout_width="286dp"
            android:layout_height="38dp"
            android:id="@+id/activity_listening_instruction"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/activity_listening_recyclerView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/activity_listening_recyclerView"
            android:layout_width="397dp"
            android:layout_height="378dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.721"/>

    <Button
            android:text="confirmBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_listening_confirmBtn" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_listening_recyclerView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.501" app:layout_constraintVertical_bias="0.078"/>
    <SeekBar
            android:layout_width="368dp"
            android:layout_height="26dp"
            android:id="@+id/seekBar" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/activity_listening_instruction"/>
    <Button
            android:text="Play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/play_audiobtn" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/seekBar" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.81"/>
    <Button
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back_audiobtn" app:layout_constraintEnd_toStartOf="@+id/play_audiobtn"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/seekBar" app:layout_constraintVertical_bias="0.81"/>
    <Button
            android:text="Fwrd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fwrd_audiobtn" app:layout_constraintStart_toEndOf="@+id/play_audiobtn"
            android:layout_marginStart="12dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/seekBar"
            app:layout_constraintVertical_bias="0.81"/>
</android.support.constraint.ConstraintLayout>